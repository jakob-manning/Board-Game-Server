{
  "$schema": "https://deno.land/x/denon@2.4.7/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run server.ts",
      "desc": "run my server.ts file"
    },
    "watch": {
      "cmd": "deno run server.ts",
      "desc": "Start server in watch mode",
      "allow": ["env", "net"],
      "env": {
        "PORT": "8080"
      }
    }
  }
}